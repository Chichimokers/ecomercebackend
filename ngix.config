                                 
server {
    listen 80;
    server_name esaki-jrr.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;

    server_name esaki-jrr.com;

    ssl_certificate /etc/letsencrypt/live/esaki-jrr.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/esaki-jrr.com/privkey.pem; # managed by Certbot

    # Optimizaciones SSL y otras configuraciones...



    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

}


